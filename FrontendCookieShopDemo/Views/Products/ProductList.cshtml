@model IEnumerable<FrontendCookieShopDemo.Models.ViewModels.ProductDisplayVm>

@{
    ViewBag.Title = "商品列表";
}

<div class="container">
    <div class="row">
        <!-- 左側導覽列 -->
        <div class="col-md-3">
            @Html.Partial("_ProductCenterNavBar")
        </div>

        <div class="col-md-9">
            <h3 class="text-center">
                @{
                    if (!string.IsNullOrEmpty(ViewBag.SearchKeyword))
                    {
                       @:搜尋結果
                    }
                    else if ((ViewBag.SelectedCategory ?? 0) == 0)
                    {
                        @:全部商品
                    }
                    else if ((ViewBag.SelectedCategory ?? 0) == 5)
                    {
                        @:推薦商品
                    }
                    else if ((ViewBag.SelectedCategory ?? 0) == 6)
                    {
                        @:特色商品
                    }
                    else if ((ViewBag.SelectedCategory ?? 0) == 7)
                    {
                        @:手工餅乾
                    }
                }

            </h3>

            <hr class="title-underline" style="margin-bottom:50px" />

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    @Html.ValidationMessage("keyword")
                </div>
            }

            @if (ViewBag.NoResultMessage != null)
            {
                <div class="alert alert-warning" role="alert">
                    @ViewBag.NoResultMessage
                </div>
            }

            <!-- 商品列表 -->
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card h-100 border-0 shadow-sm">
                            <!-- 圖片加入超連結 -->
                            <a href="@Url.Action("ProductDetails", "Products", new { id = item.Id })">
                                <img src="@Url.Content("~/Images/" + item.ProductImage)" class="card-img-top" alt="@item.Name" style="height:220px; object-fit:cover;" />
                            </a>
                            <div class="card-body text-center">
                                <!-- 商品名稱加入超連結 -->
                                <a href="@Url.Action("ProductDetails", "Products", new { id = item.Id })" class="card-title text-decoration-none text-dark">
                                    <h5>@item.Name</h5>
                                </a>
                                <p class="card-text">
                                    <span class="product-price">$@item.Price</span>

                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>